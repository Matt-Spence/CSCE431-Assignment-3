<%= form_with scope: :book, url: books_path, local: true do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@book.errors.count, "error") %> prohibited
        this book from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </p>
   <p>
    <%= form.label :genre %><br>
    <%= form.select :genre, options_for_select([["Fantasy"], ["Fiction"], ["Nonfiction"], ["Mystery"], ["Romance"], ["Other"]])%>
  </p>
  <p>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </p>
  <p>
    <%= form.label :published_date %><br>
    <%= form.date_field :published_date %>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <p>
    <%= link_to 'Back', books_path %>
  </p>
<% end %>
